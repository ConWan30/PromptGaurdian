{
  "manifest_version": 3,
  "name": "PromptGuardian",
  "version": "1.0.0",
  "description": "Universal AI prompt threat detection for ChatGPT, Claude, Gemini, Copilot, and 20+ AI platforms",
  
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "scripting",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://bard.google.com/*",
    "https://gemini.google.com/*",
    "https://ai.google.dev/*",
    "https://makersuite.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://www.bing.com/chat*",
    "https://you.com/*",
    "https://poe.com/*",
    "https://character.ai/*",
    "https://replika.ai/*",
    "https://janitorai.com/*",
    "https://chat.mistral.ai/*",
    "https://huggingface.co/*",
    "https://labs.perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://deepai.org/*",
    "https://beta.openai.com/*",
    "https://platform.openai.com/*",
    "https://console.anthropic.com/*",
    "https://grok.x.ai/*",
    "https://x.ai/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://api.x.ai/*",
    "https://api.search.brave.com/*",
    "https://promptgaurdian-production.up.railway.app/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://ai.google.dev/*",
        "https://makersuite.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.bing.com/chat*",
        "https://you.com/*",
        "https://poe.com/*",
        "https://character.ai/*",
        "https://replika.ai/*",
        "https://janitorai.com/*",
        "https://chat.mistral.ai/*",
        "https://huggingface.co/chat*",
        "https://labs.perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://deepai.org/*",
        "https://beta.openai.com/*",
        "https://platform.openai.com/*",
        "https://console.anthropic.com/*",
        "https://grok.x.ai/*",
        "https://x.ai/*"
      ],
      "js": ["src/content/prompt-guardian.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["src/content/social-shield.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "PromptGuardian Settings"
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/agents/*.js",
        "src/agents/browser-compatible/*.js",
        "src/utils/*.js",
        "src/integrations/*.js",
        "src/protocols/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}